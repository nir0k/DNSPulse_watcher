LOG_LEVEL=warning

# The maximum age of a log file to retain. (in days)
LOG_MAX_AGE=30
# The maximum size of a log file before it gets rotated. (in Megabytes (MB))
LOG_MAX_SIZE=10
# The maximum number of old log files to retain.
LOG_MAX_FILES=10

