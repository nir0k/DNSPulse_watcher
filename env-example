#=======================================================================================================
# DNS settings

# Path to file with list of DNS servers
DNS_RESOLVERPATH=dns_servers.csv
# DNS answer timeout in seconds
DNS_TIMEOUT=1
# Choice delimeter in CSV file. must be a single char
DELIMETER=,
# Choice delimeter for value in fiels 'zonename', 'query_count_rps', 'zonename_with_recursion' and 
# 'query_count_with_recursion_rps' in CSV file. must be a single char
DELIMETER_FOR_ADDITIONAL_PARAM=&

#=======================================================================================================
# Prometheus

# Prometheus remote write url. example: http://prometheus:8428/api/v1/write
PROM_URL=http://prometheus:8428/api/v1/write
# Prometheus metric name
PROM_METRIC=dns_resolve
# Prometheus authentication. false or true. If true, values PROM_USER and PROM_PASS are required
PROM_AUTH=false
# Prometheus username
PROM_USER=testuser
# Prometheus password
PROM_PASS=testuser
# Count retries for post data in prometheus
PROM_RETRIES=2

# Add in labels:
#------------------------------------------------------------------------------------------------------- 
#OpCodes. Possible value: true or false
OPCODES=false
# Authoritative. Possible value: true or false
AUTHORITATIVE=false
# Truncated. Possible value: true or false
